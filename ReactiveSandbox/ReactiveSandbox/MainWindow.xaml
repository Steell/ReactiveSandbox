<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="450" Width="500">

    <Canvas Name="Canvas" Background="White" Focusable="True">
        <Canvas Name="NodeCanvas" Width="100" Height="100">
            <Rectangle Name="NodeRect" Stroke="Black" Fill="Black" Cursor="Hand" RadiusX="10" RadiusY="10"
                       Width="{Binding ActualWidth, ElementName=NodeCanvas, Mode=OneWay}" 
                       Height="{Binding ActualHeight, ElementName=NodeCanvas, Mode=OneWay}">
                <Rectangle.ContextMenu>
                    <ContextMenu>
                        <MenuItem Name="HelloMenu" Header="Hello" />
                    </ContextMenu>
                </Rectangle.ContextMenu>
            </Rectangle>
            <Grid Name ="NodeGrid" 
                  Width="{Binding ActualWidth, ElementName=NodeCanvas, Mode=OneWay}" 
                  Height="{Binding ActualHeight, ElementName=NodeCanvas, Mode=OneWay}">
                <Button Width="60" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center">Click Me</Button>
            </Grid>
        </Canvas>
    </Canvas>
    
</Window>