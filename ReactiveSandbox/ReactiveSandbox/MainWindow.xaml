<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sandbox" Height="450" Width="500">

    <Canvas Name="NodeCanvas" Background="White" Focusable="True">
        <Canvas.ContextMenu>
            <ContextMenu>
                <MenuItem Name="NewNodeMenuItem" Header="New Node" />
                <Separator />
                <MenuItem Name="UndoMenuItem" Header="Undo" />
                <MenuItem Name="RedoMenuItem" Header="Redo" />
            </ContextMenu>
        </Canvas.ContextMenu>
    </Canvas>
    
</Window>