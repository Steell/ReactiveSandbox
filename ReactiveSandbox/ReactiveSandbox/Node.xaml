<Canvas
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Name="NodeCanvas" Width="100" Height="100">
    
    <Rectangle Name="NodeRect" Stroke="Black" Fill="Black" Cursor="Hand" RadiusX="10" RadiusY="10"
               Width="{Binding Width, ElementName=NodeCanvas, Mode=OneWay}" 
               Height="{Binding Height, ElementName=NodeCanvas, Mode=OneWay}">
        <Rectangle.ContextMenu>
            <ContextMenu>
                <MenuItem Name="HelloMenu" Header="Hello" />
                <Separator />
                <MenuItem Name="DeleteMenu" Header="Delete" />
            </ContextMenu>
        </Rectangle.ContextMenu>
    </Rectangle>
   
    <Grid Name ="NodeGrid" 
          Width="{Binding Width, ElementName=NodeCanvas, Mode=OneWay}" 
          Height="{Binding Height, ElementName=NodeCanvas, Mode=OneWay}">
        <Button Name="NodeButton"  Width="60" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center">Click Me</Button>
    </Grid>
    
</Canvas>